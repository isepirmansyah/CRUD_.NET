@page
@model MyWebApp.Pages.Posts.CreateModel

@{
    ViewData["Title"] = "Create Post";
}

<h1 class="text-4xl font-bold mb-6 text-center">Create New Post</h1>

<div class="card bg-base-100 shadow-xl p-8 max-w-2xl mx-auto">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-error mb-4" role="alert"></div>
        <div class="form-control mb-4">
            <label asp-for="Post.Title" class="label">
                <span class="label-text text-lg font-semibold">Title</span>
            </label>
            <input asp-for="Post.Title" class="input input-bordered w-full" placeholder="Enter post title" />
            <span asp-validation-for="Post.Title" class="label-text-alt text-error text-sm mt-1"></span>
        </div>
        <div class="form-control mb-4">
            <label asp-for="Post.Content" class="label">
                <span class="label-text text-lg font-semibold">Content</span>
            </label>
            <textarea asp-for="Post.Content" class="textarea textarea-bordered h-40 w-full"
                placeholder="Write your post content here..."></textarea>
            <span asp-validation-for="Post.Content" class="label-text-alt text-error text-sm mt-1"></span>
        </div>
        <div class="flex gap-2 justify-end mt-6">
            <button type="submit" class="btn btn-primary"><i class="fa-solid fa-paper-plane mr-2"></i> Create</button>
            <a asp-page="Index" class="btn btn-ghost"><i class="fa-solid fa-arrow-left mr-2"></i> Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}